# Unified Connector Backend - Example environment variables

# App
APP_NAME=Unified Connector Backend
APP_DESCRIPTION=Backend API for Unified Connector Framework
APP_VERSION=0.1.0
API_PREFIX=/api

# MongoDB
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB=unified_connector

# Security / Crypto
# Generate a Fernet key (python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=
TOKEN_ENCRYPTION_ADDITIONAL_DATA=

# Auth (placeholder)
AUTH_JWT_SECRET=change-me
AUTH_JWT_ALG=HS256

# CORS
CORS_ALLOW_ORIGINS=["*"]
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]
CORS_ALLOW_CREDENTIALS=true

# Logging
LOG_LEVEL=INFO
LOG_JSON=false

# Ocean Professional theme (for future frontend integration)
THEME_PRIMARY=#2563EB
THEME_SECONDARY=#F59E0B
THEME_SUCCESS=#F59E0B
THEME_ERROR=#EF4444
THEME_GRADIENT=from-blue-500/10 to-gray-50
THEME_BACKGROUND=#f9fafb
THEME_SURFACE=#ffffff
THEME_TEXT=#111827

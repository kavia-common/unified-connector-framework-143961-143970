# Application
APP_NAME=Unified Connector Backend
APP_DESCRIPTION=Backend API for managing connectors, connections, unified envelope, and token/sync state.
APP_VERSION=0.1.0
API_PREFIX=/api

# CORS (JSON arrays supported by pydantic as strings)
CORS_ALLOW_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Database (MongoDB)
# These will be provided by the deployment environment or local dev.
# For local dev, ensure Mongo is running and accessible.
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB=unified_connector

# Security / Crypto
# ENCRYPTION_KEY is a URL-safe base64 32-byte key (Fernet). REQUIRED for production.
# To generate:
#   python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=
TOKEN_ENCRYPTION_ADDITIONAL_DATA=

# Logging
LOG_LEVEL=INFO
# Enable JSON logs in production
LOG_JSON=false

# JWT (placeholder for future)
AUTH_JWT_SECRET=change-me-in-prod
AUTH_JWT_ALG=HS256

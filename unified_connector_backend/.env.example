# Backend environment sample for Unified Connector Backend

# App
APP_NAME=Unified Connector Backend
APP_DESCRIPTION=Backend API for connectors and connections
APP_VERSION=0.1.0
API_PREFIX=/api

# CORS
CORS_ALLOW_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Database (ensure to set these according to your MongoDB deployment)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB=unified_connector

# Security / Encryption
# ENCRYPTION_KEY must be a URL-safe base64 32-byte key for Fernet.
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# Do NOT commit real keys. Required for production.
ENCRYPTION_KEY=
# Optional associated data if you integrate AEAD contexts (kept for potential future use)
TOKEN_ENCRYPTION_ADDITIONAL_DATA=

# Auth (placeholder)
AUTH_JWT_SECRET=change-me-in-prod
AUTH_JWT_ALG=HS256

# Logging
# LOG_JSON=true produces structured JSON logs
LOG_LEVEL=INFO
LOG_JSON=true
